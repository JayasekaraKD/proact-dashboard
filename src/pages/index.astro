---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import RelationshipTable from "../components/dashboard/RelationshipTable";
import { relationships } from "../data/dummy";
---

<DashboardLayout title="Relationships">
	<div class="space-y-4">
		<div class="flex justify-between items-center py-4">
			<h1 class="text-2xl">Relationships</h1>
			<button
				class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md"
			>
				+ CREATE NEW RELATIONSHIP
			</button>
		</div>

		<!-- Search Box -->
		<div class="mb-4">
			<input
				type="text"
				placeholder="Search relationships..."
				class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
			/>
		</div>

		<RelationshipTable client:load data={relationships} />
	</div>
</DashboardLayout>
